@model Bloggy.web.Models.ViewModels.RegisterViewModel;
@{
}
<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h2 class="mb-3 h3 text-center">Register</h2>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" id="Username" required asp-for="Username" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" required asp-for="Email"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="text" class="form-control" id="Password" required asp-for="Password" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark" type="submit">Register</button>
                </div>
            </form>
            
           </div></div></div>
