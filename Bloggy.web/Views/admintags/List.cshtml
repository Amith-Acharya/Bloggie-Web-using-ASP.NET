@model List<
Bloggy.web.Models.Domain.Tag>
@{
}
<div class="container">
    <div class="bg-secondary bg-opacity-10 py-2">

        <h1>Show all Tags - Admin functionality</h1>
    </div>
</div>
<div class="container" py-5>
    @if (Model!=null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Display Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {<tr>
                    <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Displayname</td>
                <td><a asp-area="" asp-controller="admintags" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>no models found</p>
    }
</div>